{% extends 'admin_base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ product.quantity }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>MinQuantity</th>
                <td>{{ product.minQuantity }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{{ product.imageName }}</td>
            </tr>
        </tbody>
    </table>

    <div class="btn-group mb-3">
        <a class="btn btn-secondary" href="{{ path('app_admin_product_index') }}">back to list</a>
        <a class="btn btn-primary" href="{{ path('app_admin_product_edit', {'id': product.id}) }}">edit</a>
    </div>

    {{ include('admin_product/_delete_form.html.twig') }}
{% endblock %}
