{% extends 'base.html.twig' %}

{% block title %}Product in {{ storage.name }}{% endblock %}

{% block body %}
    <h1>Products in {{ storage.name }}</h1>
    {% if products %}
        <ul class="group-list">
            {% for product in products %}
                <li class="group-list-item">
                    <a href="{{ path('app_product') }}{{ product.id }}">{{ product.name }}</a>
                </li>
            {% forend %}
        </ul>
    {% else %}
        <p>No products found.</p>
    {% endif %}
{% endblock %}
