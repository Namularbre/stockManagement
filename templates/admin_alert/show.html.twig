{% extends 'admin_base.html.twig' %}

{% block title %}Alert{% endblock %}

{% block body %}
    <h1>Alert</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ alert.id }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ alert.createdAt ? alert.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Finished</th>
                <td>{{ alert.finished ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="btn-group mb-3">
        <a class="btn btn-secondary" href="{{ path('app_admin_alert_index') }}">back to list</a>
        <a class="btn btn-primary" href="{{ path('app_admin_alert_edit', {'id': alert.id}) }}">edit</a>
    </div>
    {{ include('admin_alert/_delete_form.html.twig') }}
{% endblock %}
