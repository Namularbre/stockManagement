{% extends 'admin_base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
        </tbody>
    </table>
    <div class="btn-group mb-3">
        <a class="btn btn-primary" href="{{ path('app_admin_user_index') }}">back to list</a>
        <a class="btn btn-secondary" href="{{ path('app_admin_user_edit', {'id': user.id}) }}">edit</a>
    </div>
    {{ include('admin_user/_delete_form.html.twig') }}

{% endblock %}
